# ============================================
# MiWeb / Silhouette CRM - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# ---- REQUIRED ----

# Database
DATABASE_URL=postgresql://miweb_admin:YOUR_DB_PASSWORD@localhost:5432/miweb_db?schema=public
DB_USER=miweb_admin
DB_PASSWORD=YOUR_SECURE_PASSWORD
DB_NAME=miweb_db

# Authentication
JWT_SECRET=YOUR_JWT_SECRET_MIN_32_CHARS

# ---- RECOMMENDED ----

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ---- AI PROVIDERS ----

# Gemini (Primary AI)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.0-flash

# Zhipu AI (Fallback)
ZHIPU_API_KEY=
ZHIPU_CHAT_MODEL=glm-4-flash
ZHIPU_IMAGE_MODEL=cogview-3
ZHIPU_MAX_CONCURRENT=3
ZHIPU_RPM_LIMIT=10

# DeepSeek (Optional)
DEEPSEEK_API_KEY=

# ---- INFRASTRUCTURE ----

# Backend
PORT=3001
NODE_ENV=development

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ---- PRODUCTION ONLY ----

# SSL Certificates (mount paths in docker)
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem
